<p id="notice"><%= notice %></p>

<h1>Listing Gates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gates.each do |gate| %>
      <tr>
        <td><%= gate.name %></td>
        <td><%= gate.longitude %></td>
        <td><%= gate.latitude %></td>
        <td><%= link_to 'Show', gate %></td>
        <td><%= link_to 'Edit', edit_gate_path(gate) %></td>
        <td><%= link_to 'Destroy', gate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gate', new_gate_path %>
